<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
        http://www.jboss.org/ironjacamar/schema
        http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">
    <datasource jndi-name="java:jboss/jdbc/mercury_pool" pool-name="mercury_pool" enabled="true">
        <connection-url>jdbc:oracle:thin:@192.168.195.61:1521:gpinfprd</connection-url>
        <driver>com.oracle</driver>
        <!--<connection-url>jdbc:postgresql://localhost/postgres</connection-url>-->
        <!--<driver>org.postgresql</driver>-->
        <security>
            <user-name>mercury</user-name>
            <password>guest</password>
