<?xml version="1.0" encoding="UTF-8"?>

<facelet-taglib  xmlns="http://java.sun.com/xml/ns/javaee"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
                version="2.0">

    <namespace>http://mercury.broadinstitute.org/tags</namespace>

    <tag>
        <tag-name>isLoggedIn</tag-name>
        <handler-class>org.broadinstitute.gpinformatics.mercury.presentation.tags.security.LoggedInTag</handler-class>
    </tag>
    <tag>
        <tag-name>isLoggedOut</tag-name>
        <handler-class>org.broadinstitute.gpinformatics.mercury.presentation.tags.security.LoggedOutTag</handler-class>
    </tag>
    <tag>
        <tag-name>xauthorizeBlock</tag-name>
        <handler-class>org.broadinstitute.gpinformatics.mercury.presentation.tags.security.AuthorizeBlockTag</handler-class>
        <attribute>
            <description>Comma separated list of groups that this block will allow access.  Using "All" will mean all groups have access</description>
            <name>roles</name>
            <required>true</required>
        </attribute>
    </tag>

</facelet-taglib>
