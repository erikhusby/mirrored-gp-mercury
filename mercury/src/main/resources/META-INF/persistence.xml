<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="mercury_pu" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:jboss/jdbc/mercury_pool</jta-data-source>
        <properties>
            <!--            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgresPlusDialect"/> -->
            <!--<property name="hibernate.dialect" value="org.broadinstitute.gpinformatics.infrastructure.jpa.AthenaPostgresPlusDialect"/>-->
         <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
            <property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy" />
            <!-- this is set to false by default in Glassfish, and true by default in JBoss, so set it explicitly -->
            <property name="hibernate.id.new_generator_mappings" value="true"/>
            <!-- todo jmt this doesn't seem to work -->
            <property name="org.hibernate.flushMode" value="COMMIT" />
            <property name="hibernate.jdbc.batch_size" value="50"/>
            <!-- todo jmt These settings dramatically improve performance of import of molecular index plates, but
            may cause unique constraints in SampleReceiptResource.  HHH-3683 suggests it's fixed in Hibernate 4.3.
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
            -->
        </properties>
    </persistence-unit>
<!--
    This is used only by ImportFromSquidTest.  Deploying the corresponding data source is problematic in CRSP.
    Phil Shapiro, don't delete it, we still need to import reagents from Squid occasionally.
    <persistence-unit name="squid_pu" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:jboss/jdbc/squid_pool</jta-data-source>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
            <property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy" />
            <property name="org.hibernate.flushMode" value="COMMIT" />
        </properties>
    </persistence-unit>
-->
</persistence>
