<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <!-- changeSet ids include the ticket number, with -n appended to allow multiple changeSets per ticket.
     Keep changeSets small, it's harder to recover from an error in a large changeSet.
      -->

    <changeSet id="GPLIM-1516-1" author="hrafal">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="billing_ledger" columnName="auto_ledger_timestamp" schemaName="athena"/>
            </not>
        </preConditions>
        <addColumn tableName="billing_ledger">
            <column name="auto_ledger_timestamp" type="timestamp"/>
        </addColumn>
    </changeSet>

    <changeSet id="GPLIM-1516-2" author="hrafal">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="billing_ledger_aud" columnName="auto_ledger_timestamp" schemaName="athena"/>
            </not>
        </preConditions>
        <addColumn tableName="billing_ledger_aud">
            <column name="auto_ledger_timestamp" type="timestamp"/>
        </addColumn>
    </changeSet>

    <changeSet id="GPLIM-1516-3" author="hrafal">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists tableName="billing_ledger" indexName="ix_auto_ledger" schemaName="athena"/>
            </not>
        </preConditions>
        <createIndex tableName="billing_ledger" indexName="ix_auto_ledger" schemaName="athena">
            <column name="auto_ledger_timestamp"/>
        </createIndex>
    </changeSet>
    <changeSet id="GPLIM-2036-1" author="scottmat">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="athena" tableName="sample_receipt_validation" />
            </not>
        </preConditions>
        <createTable tableName="sample_receipt_validation" schemaName="athena">
            <column name="validation_id" type="number(19,0)" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="product_order_sample" type="number(19,0)">
                <constraints nullable="false"/>
            </column>
            <column name="validation_type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="number(19, 0)" >
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" >
                <constraints nullable="false"/>
            </column>
            <column name="modified_by" type="number(19, 0)" />
            <column name="modified_date" type="timestamp" />
        </createTable>

        <createSequence sequenceName="SEQ_SAMP_REC_VALIDATION" schemaName="athena" startValue="1"
                        incrementBy="50"/>

        <addForeignKeyConstraint baseColumnNames="product_order_sample" baseTableName="sample_receipt_validation"
                                 baseTableSchemaName="athena" constraintName="fk_sample_receipt_po_sample"
                                 referencedColumnNames="product_order_sample_id" referencedTableName="product_order_sample"
                                 referencedTableSchemaName="athena" />

    </changeSet>
    <changeSet id="GPLIM-2036-2" author="scottmat">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="athena" tableName="sample_receipt_validation_aud" />
            </not>
        </preConditions>
        <createTable tableName="sample_receipt_validation_aud" schemaName="athena">
            <column name="validation_id" type="number(19,0)" />
            <column name="rev" type="number(19,0)">
                <constraints nullable="true"/>
            </column>
            <column name="revtype" type="number(3,0)">
                <constraints nullable="true"/>
            </column>
            <column name="product_order_sample" type="number(19,0)"/>
            <column name="validation_type" type="varchar(255)"/>
            <column name="status" type="varchar(255)"/>
            <column name="created_by" type="number(19, 0)" />
            <column name="created_date" type="timestamp" />
            <column name="modified_by" type="number(19, 0)" />
            <column name="modified_date" type="timestamp" />
        </createTable>

        <addPrimaryKey tableName="sample_receipt_validation_aud" schemaName="athena" columnNames="validation_id, rev"/>
        <addForeignKeyConstraint baseTableName="sample_receipt_validation_aud" baseTableSchemaName="athena"
                                 baseColumnNames="rev" constraintName="fk_samp_rcpt_val_aud_rev_info"
                                 referencedTableName="rev_info" referencedTableSchemaName="mercury"
                                 referencedColumnNames="rev_info_id"/>
    </changeSet>


    <changeSet id="GPLIM-1957-1" author="dinsmore">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="product_order" columnName="REQUISITION_KEY" schemaName="athena"/>
            </not>
        </preConditions>
        <addColumn tableName="product_order">
            <column name="REQUISITION_KEY" type="VARCHAR(60)"/>
        </addColumn>
    </changeSet>

    <changeSet id="GPLIM-1957-2" author="dinsmore">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="product_order_aud" columnName="REQUISITION_KEY" schemaName="athena"/>
            </not>
        </preConditions>
        <addColumn tableName="product_order_aud">
            <column name="REQUISITION_KEY" type="VARCHAR(60)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
