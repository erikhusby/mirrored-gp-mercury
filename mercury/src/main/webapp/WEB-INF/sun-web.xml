<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sun-web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD GlassFish Application Server 3.0 Servlet 3.0//EN"
        "http://www.sun.com/software/appserver/dtds/sun-web-app_3_0-0.dtd">
<sun-web-app>
    <context-root>/Mercury</context-root>

    <security-role-mapping>
        <role-name>Mercury-Admins</role-name>
        <group-name>Mercury-Admins</group-name>
    </security-role-mapping>

    <security-role-mapping>
        <role-name>Mercury-LabUsers</role-name>
        <group-name>Mercury-LabUsers</group-name>
    </security-role-mapping>

    <security-role-mapping>
        <role-name>Mercury-LabManagers</role-name>
        <group-name>Mercury-LabManagers</group-name>
    </security-role-mapping>

    <security-role-mapping>
        <role-name>Mercury-ProjectManagers</role-name>
        <group-name>Mercury-ProjectManagers</group-name>
    </security-role-mapping>

    <security-role-mapping>
        <role-name>Mercury-Developers</role-name>
        <group-name>Mercury-Developers</group-name>
    </security-role-mapping>

    <parameter-encoding default-charset="UTF-8"/>
</sun-web-app>
