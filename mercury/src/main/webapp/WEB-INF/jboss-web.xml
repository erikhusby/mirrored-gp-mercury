        xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee http://www.jboss.org/j2ee/schema/jboss-web_7_1.xsd"
        version="7.1">
    <context-root>/Mercury</context-root>
    <session-config>
        <session-timeout>20</session-timeout>
    </session-config>
    <valve>
        <class-name>org.broadinstitute.gpinformatics.mercury.presentation.security.AuthorizationValve</class-name>
    </valve>
    <security-domain>crowd_custom_realm</security-domain>
</jboss-web>
